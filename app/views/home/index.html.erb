<div class='col-md-6'>
  <h3>Start your subscription!</h3>

  <%= form_tag "/checkout", html: { id: "checkout" } do %>
    <p>
      <%= label_tag "first_name" %><br>
      <%= text_field_tag "first_name", '', class: 'form-control' %>
    </p>

    <p>
      <%= label_tag "last_name" %><br>
      <%= text_field_tag "last_name", '', class: 'form-control' %>
    </p>
    <div id="dropin"></div>

    <input type="submit" value="Pay $99" class="btn btn-primary">
  <% end %>
</div>


<script src="https://js.braintreegateway.com/v2/braintree.js">
</script>

<script>
braintree.setup(
  "<%= @client_token %>",
  'dropin', {
    container: 'dropin'
  });
  </script>
